<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scowluga.android.msccareershowcase.general.PurposeFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/anchor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mschero"
                    android:adjustViewBounds="true"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Who are we?"
                        style="@style/titleText"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Serving the Canadian Special Needs Community since 1980, providing Adaptive technology, Consulting, Training, Service and Support."
                        style="@style/accentText"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We are a company with over 35 years experience in Special Needs. We employ qualified and exceptional staff holding a reputation for providing start to finish service in our service community. We provide the solutions you are looking for. We hold a nationwide network of contacts in the Special Needs field. Staff complements include individuals with Special Needs such as Low Vision, Learning Disabilities and Blindness. These individuals specialize in servicing needs through first hand knowledge of their particular community."
                        style="@style/infoText"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What do we do? "
                        android:layout_marginTop="10dp"
                        style="@style/titleText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We tailor-make each system to your personal requirements and personal needs. We provide training on all systems we install as well as technical support. We keep our clients current on all new programs in their specific area of interest."
                        style="@style/infoText"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/purpose_products"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:text="Products"
                            android:drawableLeft="@drawable/left_products"/>

                        <!--CHANGE THIS FROM CHART -> TEAM -->
                        <!--https://microscience.on.ca/team/-->
                        <Button
                            android:id="@+id/purpose_chart"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:text="Chart"
                            android:drawableLeft="@drawable/left_chart"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
</FrameLayout>
