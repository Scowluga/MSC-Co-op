<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scowluga.android.msccareershowcase.other.CareerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/LayoutParams">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/titleText"
            android:layout_marginTop="@dimen/marginOut"
            android:text="Relevant Career Connections"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/infoText"
            android:text="Possible full time jobs at my placement that I would look at involve computer programming, and IT knowledge. Some of the degrees that would be required are listed below. A minimum of a Bachelors degree is required for a full time position."/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_marginTop="6dp">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</FrameLayout>
