<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <TextView
        android:id="@+id/career_degree_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/largeText"
        android:text="Bachelor of Computer Science (Faculty of Mathematics) at The University of Waterloo"/>

    <TextView
        android:id="@+id/career_degree_university"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/accentText"
        android:text="University of Waterloo"/>

    <TextView
        android:id="@+id/career_degree_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/infoText"
        android:layout_gravity="right"
        android:text="5 year program (co-op)"/>

    <TextView
        android:id="@+id/career_degree_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/infoText"
        android:layout_gravity="right"
        android:text="Adv Fx, Calc, Eng"/>

    <TextView
        android:id="@+id/career_degree_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/infoText"
        android:layout_gravity="right"
        android:text="$11,800"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"/>


</LinearLayout>